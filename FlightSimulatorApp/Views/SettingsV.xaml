<Window x:Class="FlightSimulatorApp.Views.SettingsV"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Settings" Height="150" Width="300">
    <Canvas>
        <TextBlock FontWeight="Bold" Canvas.Left="23" Canvas.Top="10">Simulator IP:</TextBlock>
        <TextBox x:Name="txtIP" Text="{Binding SimulatorIP}" Canvas.Left="157" Canvas.Top="10" Width="120" Height="24"/>
        <TextBox x:Name="txtPort" Text="{Binding SimulatorPort}" Canvas.Left="157" Canvas.Top="50" Width="120" Height="24"/>
        <TextBlock FontWeight="Bold" Canvas.Left="23" Canvas.Top="50">Simulator Port:</TextBlock>
        <Button Content="OK" Width="75" Command="{Binding ClickCM}" Canvas.Left="34" Canvas.Top="92"/>
        <Button Content="Cancel" Width="75" Command="{Binding CancelCM}" Canvas.Left="186" Canvas.Top="92"/>
    </Canvas>
</Window>
